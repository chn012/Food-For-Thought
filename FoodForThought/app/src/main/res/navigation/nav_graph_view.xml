<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph_view"
    app:startDestination="@id/nav_main_fragment">

    <fragment
        android:id="@+id/nav_main_fragment"
        android:name="com.example.foodforthought.MainFragment"
        android:label="Main Fragment"
        tools:layout="@layout/fragment_main">

        <action
            android:id="@+id/action_MainFragment_toAddRecipe"
            app:destination="@id/RecipeFragment" />
    </fragment>
    <fragment
        android:id="@+id/RecipeFragment"
        android:name="com.example.foodforthought.AddRecipeFragment"
        android:label="Add Recipe"
        tools:layout="@layout/fragment_addrecipe">

        <action
            android:id="@+id/action_AddRecipe_toMain"
            app:destination="@id/nav_main_fragment" />
    </fragment>
</navigation>
