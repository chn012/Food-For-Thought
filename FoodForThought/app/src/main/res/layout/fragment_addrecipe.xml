<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:context=".AddRecipeFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <Button
            android:id="@+id/addnewrecipebutton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="72dp"
            android:text="Add New Recipe" />

        <Button
            android:id="@+id/saveunsaverecipebutton"
            android:layout_width="match_parent"
            android:layout_height="61dp"
            android:layout_marginTop="5dp"
            android:text="Save/Unsave Recipes" />

        <Button
            android:id="@+id/favoriterecipebutton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Favorite Recipes" />

        <Button
            android:id="@+id/addpersonalrecipebutton"
            android:layout_width="436dp"
            android:layout_height="wrap_content"
            android:text="Add Personal Recipes" />

        <Button
            android:id="@+id/updaterecipebutton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Update Recipes" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>